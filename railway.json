{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "npm install",
    "nixpacks": {
      "providers": ["nodejs", "python"],
      "install": {
        "apt": [
          "libgobject-2.0-0",
          "libglib2.0-0",
          "libx11-6",
          "libxext6",
          "libxrender1",
          "libfreetype6",
          "libc6",
          "libgcc1"
        ]
      }
    }
  },
  "deploy": {
    "startCommand": "node chatbot-papaleguas.js",
    "restartPolicyType": "always",
    "restartPolicyMaxRetries": 5
  }
}
